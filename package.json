{
  "name": "@bigmoves/tantivy-js",
  "version": "0.1.1",
  "description": "Full-text search powered by tantivy, compiled to native Node.js addon",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./src/index.js"
    }
  },
  "files": [
    "src",
    "*.node"
  ],
  "napi": {
    "name": "tantivy-js-core",
    "triples": {
      "defaults": false,
      "additional": [
        "x86_64-apple-darwin",
        "aarch64-apple-darwin",
        "x86_64-unknown-linux-gnu",
        "aarch64-unknown-linux-gnu"
      ]
    }
  },
  "scripts": {
    "build": "napi build --platform --release --cargo-cwd ./crates/tantivy-js-core",
    "build:debug": "napi build --platform --cargo-cwd ./crates/tantivy-js-core",
    "test": "vitest",
    "lint": "oxlint src test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "napi prepublish --skip-gh-release"
  },
  "keywords": [
    "search",
    "tantivy",
    "full-text",
    "native",
    "napi"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0",
    "@types/node": "^25.2.0",
    "oxlint": "^0.16.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "optionalDependencies": {
    "@bigmoves/tantivy-js-darwin-x64": "0.1.1",
    "@bigmoves/tantivy-js-darwin-arm64": "0.1.1",
    "@bigmoves/tantivy-js-linux-x64-gnu": "0.1.1",
    "@bigmoves/tantivy-js-linux-arm64-gnu": "0.1.1"
  }
}