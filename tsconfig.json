{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ES2022",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./types",
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src/**/*.js", "types/**/*.d.ts"]
}
